		for _, a := range actual {
			if a.Spec.Repository == e.Spec.Repository {
				With(t).Expect(a).Will(CompareTo(e).Using(DeploymentComparator))
				found = true
				break
			}
		}
		With(t).Expect(found).Will(BeEqualTo(true))
	}
