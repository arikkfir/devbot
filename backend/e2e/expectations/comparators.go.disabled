func EnvironmentComparator(t TT, e, a any) any {
	expected := e.(EnvE)
	actual := a.(apiv1.Environment)
	With(t).Expect(actual.Spec.PreferredBranch).Will(BeEqualTo(expected.Spec.PreferredBranch))
	With(t).Expect(actual.Status.Conditions).Will(CompareTo(expected.Status.Conditions).Using(ConditionsComparator))

	nsFilter := client.InNamespace(actual.Namespace)
	ownershipFilter := k8s.OwnedBy(K(t).Client.Scheme(), &actual)

	deploymentsList := &apiv1.DeploymentList{}
	With(t).Expect(K(t).Client.List(t, deploymentsList, nsFilter, ownershipFilter)).Will(Succeed())
	With(t).Expect(deploymentsList.Items).Will(CompareTo(expected.Deployments).Using(DeploymentsComparator))
	return a
}

