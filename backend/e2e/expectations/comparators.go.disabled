package expectations

import (
	apiv1 "github.com/arikkfir/devbot/backend/api/v1"
	"github.com/arikkfir/devbot/backend/internal/util/k8s"
	. "github.com/arikkfir/devbot/backend/internal/util/testing"
	. "github.com/arikkfir/devbot/backend/internal/util/testing/justest"
	"sigs.k8s.io/controller-runtime/pkg/client"
)

func ApplicationsComparator(t T, e, a any) any {
	expected := e.(map[string]AppE)
	actual := a.([]apiv1.Application)
	With(t).Expect(len(actual)).Will(BeEqualTo(len(expected)))
	for _, e := range expected {
		found := false
		for _, a := range actual {
			if a.Name == e.Name {
				With(t).Expect(a).Will(CompareTo(e).Using(ApplicationComparator))
				found = true
				break
			}
		}
		With(t).Expect(found).Will(BeEqualTo(true))
	}
	return a
}

func ApplicationComparator(t TT, e, a any) any {
	appE := e.(AppE)
	actualApp := a.(apiv1.Application)
	With(t).Expect(actualApp.Status.Conditions).Will(CompareTo(appE.Status.Conditions).Using(ConditionsComparator))

	envList := &apiv1.EnvironmentList{}
	With(t).Expect(K(t).Client.List(t, envList, client.InNamespace(actualApp.Namespace))).Will(Succeed())
	With(t).Expect(envList.Items).Will(CompareTo(appE.Environments).Using(EnvironmentsComparator))
	return a
}

